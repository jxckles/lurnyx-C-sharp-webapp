@model LoginViewModel
@using static Lurnyx.Resources.Views.Screen
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/output.css?v=1.0.0" />
}
@{
    ViewData["Title"] = "Login Page";
}

<partial name="_LoadingScreen" />

<div>
    @Html.AntiForgeryToken()
</div>

<!-- Centered Logo + Login Container -->
<div class="flex flex-col items-center justify-center min-h-screen bg-white dark:bg-[#022b3a] px-4 transition-colors duration-300 relative overflow-hidden pb-16">
    <img src="~/img/BackgroundWave.svg"
         class="absolute inset-0 w-full h-full object-cover opacity-0 dark:opacity-100 transition-opacity duration-300 pointer-events-none"
         alt="background wave">

    <!-- Logo -->
    <div class="mb-8 w-full max-w-[112px] z-1">
        <img src="~/img/LurnyxLogo1Square.svg" class="h-28 w-full object-contain dark:hidden" alt="logo">
        <img src="~/img/LurnyxLogo1SquareWhite.svg" class="h-28 w-full object-contain hidden dark:block"
             alt="logo dark">
    </div>

    <!-- Login Container -->
    <div class="flex flex-col lg:flex-row border border-[rgba(2,43,58,0.54)] dark:border-[rgba(255,255,255,0.2)] rounded-lg overflow-hidden shadow-lg w-full max-w-[1164px] h-auto min-h-[600px] lg:min-h-[650px]">
        <!-- Left Side: Login Form -->
        <div class="w-full lg:w-1/2 p-8 lg:p-12 flex flex-col justify-center gap-0 dark:bg-white/10 dark:backdrop-blur">
            <div class="mb-12">
                <h1 class="text-[#022B3A] dark:text-white text-2xl lg:text-3xl font-semibold">Welcome back</h1>
                <p class="text-[#022B3A] dark:text-white text-sm lg:text-base font-medium tracking-wider">Sign in to access your account</p>
            </div>

            <!-- Login Form -->
            <form method="post" action="/Account/Login" id="loginForm" class="space-y-6">
                <!-- Email -->
                <div>
                    <label class="block text-[#022B3A] dark:text-[#feffff] text-sm font-medium tracking-wider mb-2">Email</label>
                    <div class="relative">
                        <input type="email" asp-for="Email"
                               class="w-full h-10 border border-[#144557] dark:border-white rounded-md pl-4 text-[#1F7A8C] dark:text-[#f4fdff] dark:bg-transparent text-sm font-medium tracking-wider placeholder-[#1F7A8C]/50 dark:placeholder-[#f4fdff]/70"
                               placeholder="Enter your email">
                        <span asp-validation-for="Email"
                              class="text-red-600 dark:text-red-300 absolute -bottom-5 left-0 text-xs"></span>
                    </div>
                </div>

                <!-- Password -->
                <div>
                    <label class="block text-[#022B3A] dark:text-[#feffff] text-sm font-medium tracking-wider mb-2">Password</label>
                    <div class="relative">
                        <input type="password" asp-for="Password" id="passwordInput"
                               class="w-full h-10 border border-[#144557] dark:border-white rounded-md pl-4 text-[#1F7A8C] dark:text-[#f4fdff] dark:bg-transparent text-sm font-semibold tracking-wider placeholder-[#1F7A8C]/50 dark:placeholder-[#f4fdff]/70"
                               placeholder="Enter your password">
                        <button type="button" class="absolute right-3 top-2.5 toggle-password cursor-pointer">
                            <svg id="showPasswordIcon" xmlns="http://www.w3.org/2000/svg"
                                 class="h-5 w-5 text-[#144557] dark:text-white" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            <svg id="hidePasswordIcon" xmlns="http://www.w3.org/2000/svg"
                                 class="h-5 w-5 text-[#144557] dark:text-white hidden" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                        </button>
                        <span asp-validation-for="Password"
                              class="text-red-600 dark:text-red-300 absolute -bottom-5 left-0 text-xs"></span>
                    </div>
                </div>

                <!-- Forgot Password -->
                <div class="mt-12 mb-6">
                    <a asp-controller="Account" asp-action="ForgotPassword"
                       class="text-[#144557] dark:text-white text-sm font-medium tracking-wider hover:underline">
                        Forgot
                        password?
                    </a>
                </div>

                <!-- Sign In -->
                <button type="submit"
                        class="w-full h-10 bg-[#022B3A] dark:bg-[#2d92a6] rounded-md shadow-md text-white text-base font-semibold hover:bg-[#03435a] dark:hover:bg-[#3aa5c0] transition-colors cursor-pointer">
                    Sign In
                </button>

                <!-- Sign Up Link -->
                <div class="text-center">
                    <span class="text-[#144557] dark:text-white text-sm font-medium tracking-wider">
                        Don't have an
                        account?
                    </span>
                    <a asp-controller="Account" asp-action="Register"
                       class="text-[#056588] dark:text-[#60ffec] text-sm font-medium tracking-wider ml-1 hover:underline">
                        Sign
                        up
                    </a>
                </div>
            </form>
        </div>

        <!-- Right Side: Illustration -->
        <div class="w-full lg:w-1/2 bg-white dark:bg-[#163743] dark:bg-white/10 dark:backdrop-blur relative overflow-hidden transition-colors duration-300 hidden lg:block">
            <!-- Image Carousel Container -->
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[80%] h-[80%] max-w-[549px] max-h-[712px] bg-[#2d4f5b] dark:bg-[#163743] rounded-3xl overflow-hidden transition-colors duration-300">
                <!-- Carousel Slides -->
                <div class="flex h-full transition-transform duration-500 ease-in-out" id="carousel-slides">
                    <!-- Slide 1 -->
                    <div class="min-w-full h-full flex items-center justify-center">
                        <img src="~/img/login-image-1.jpg" class="h-full w-full object-cover" alt="Slide 1">
                    </div>
                    <!-- Slide 2 -->
                    <div class="min-w-full h-full flex items-center justify-center">
                        <img src="~/img/login-image-2.jpg" class="h-full w-full object-cover" alt="Slide 2">
                    </div>
                    <!-- Slide 3 -->
                    <div class="min-w-full h-full flex items-center justify-center">
                        <img src="~/img/login-image-3.jpg" class="h-full w-full object-cover" alt="Slide 3">
                    </div>
                </div>
            </div>

            <!-- Carousel Indicators -->
            <div class="absolute bottom-3 left-1/2 transform -translate-x-1/2 flex space-x-4" id="carousel-indicators">
                <div class="w-2 h-2 bg-[#488e9d] dark:bg-[#60ffec] rounded-full cursor-pointer indicator-dot" data-index="0"></div>
                <div class="w-2 h-2 bg-gray-400 dark:bg-gray-600 rounded-full cursor-pointer indicator-dot" data-index="1"></div>
                <div class="w-2 h-2 bg-gray-400 dark:bg-gray-600 rounded-full cursor-pointer indicator-dot" data-index="2"></div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <partial name="_ToastError" />
    
    <script type="module">
        // Get C# variables from the server
        const emailRegexPattern = @Html.Raw(Json.Serialize(@"^[^@\s]+@[^@\s]+\.[^@\s]+$")); // Simple email regex
        const validationMessages = @Html.Raw(Json.Serialize(new {
            EmailRequired = "Please enter your email address",
            EmailInvalid = "Please enter a valid email address",
            PasswordRequired = "Please enter your password",
            BothRequired = "Please enter both email and password"
        }));

        import { LoadingScreen } from '/js/loadingScreen.js';

        // Password visibility toggle
        document.querySelectorAll('.toggle-password').forEach(button => {
            button.addEventListener('click', function () {
                const input = this.parentElement.querySelector('input');
                const showIcon = this.querySelector('#showPasswordIcon');
                const hideIcon = this.querySelector('#hidePasswordIcon');

                if (input.type === 'password') {
                    input.type = 'text';
                    showIcon.classList.add('hidden');
                    hideIcon.classList.remove('hidden');
                } else {
                    input.type = 'password';
                    showIcon.classList.remove('hidden');
                    hideIcon.classList.add('hidden');
                }
            });
        });

        // Form submission handler with validation
        document.getElementById('loginForm')?.addEventListener('submit', function(e) {
            const emailInput = this.querySelector('input[type="email"]');
            const passwordInput = this.querySelector('input[type="password"]');
            const email = emailInput.value.trim();
            const password = passwordInput.value.trim();
            
            // Reset error states
            emailInput.classList.remove('border-red-500');
            passwordInput.classList.remove('border-red-500');
            
            // Validation flags
            let isValid = true;
            let errorMessage = '';
            
            // Email validation
            if (!email) {
                emailInput.classList.add('border-red-500');
                errorMessage = validationMessages.EmailRequired;
                isValid = false;
            } else {
                const emailRegex = new RegExp(emailRegexPattern);
                if (!emailRegex.test(email)) {
                    emailInput.classList.add('border-red-500');
                    errorMessage = validationMessages.EmailInvalid;
                    isValid = false;
                }
            }
            
            // Password validation
            if (!password) {
                passwordInput.classList.add('border-red-500');
                // Only set error message if not already set by email validation
                if (!errorMessage) errorMessage = validationMessages.PasswordRequired;
                isValid = false;
            }
            
            // Show error if validation failed
            if (!isValid) {
                e.preventDefault();
                // If both fields are empty, show the combined message
                if (!email && !password) {
                    errorMessage = validationMessages.BothRequired;
                }
                showToastError(errorMessage);
                return;
            }
            
              console.log('Form submitted'); // Add this line
            // Only show loading screen if validation passes
            LoadingScreen.show();
        });

        // Carousel functionality (unchanged)
        document.addEventListener('DOMContentLoaded', function () {
            const carousel = document.getElementById('carousel-slides');
            if (!carousel) return;

            const indicators = document.querySelectorAll('.indicator-dot');
            let currentIndex = 0;
            const totalSlides = 3;
            let interval;

            const updateIndicatorColors = () => {
                const isDark = document.documentElement.classList.contains('dark');
                const activeColor = isDark ? '#60ffec' : '#488e9d';
                const inactiveColor = isDark ? 'rgb(75, 85, 99)' : 'rgb(156, 163, 175)';

                indicators.forEach((dot, index) => {
                    dot.style.backgroundColor = index === currentIndex ? activeColor : inactiveColor;
                });
            };

            function updateCarousel() {
                carousel.style.transform = `translateX(-${currentIndex * 100}%)`;
                updateIndicatorColors();
            }

            function nextSlide() {
                currentIndex = (currentIndex + 1) % totalSlides;
                updateCarousel();
            }

            function startCarousel() {
                interval = setInterval(nextSlide, 3000);
            }

            indicators.forEach(dot => {
                dot.addEventListener('click', function () {
                    clearInterval(interval);
                    currentIndex = parseInt(this.getAttribute('data-index'));
                    updateCarousel();
                    startCarousel();
                });
            });

            updateIndicatorColors();

            const observer = new MutationObserver(updateIndicatorColors);
            observer.observe(document.documentElement, {
                attributes: true,
                attributeFilter: ['class']
            });

            startCarousel();
        });
    </script>
}