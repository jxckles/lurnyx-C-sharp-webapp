@model Lurnyx.WebApp.Models.ResetPasswordViewModel
@using static Lurnyx.Resources.Views.Screen
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/output.css?v=1.0.0" />
}
@{
    ViewData["Title"] = "Reset Password";
}

<!-- Main Container -->
<div class="flex flex-col items-center justify-center min-h-screen bg-white dark:bg-[#022b3a] px-4 transition-colors duration-300 relative overflow-hidden">
    <!-- Background Wave -->
    <img src="~/img/BackgroundWave.svg"
         class="absolute inset-0 w-full h-full object-cover opacity-0 dark:opacity-100 transition-opacity duration-300 pointer-events-none"
         alt="background wave">

    <!-- Combined Logo + Card Container -->
    <div class="w-full flex flex-col items-center relative pb-117">
        <!-- Logo -->
        <div class="w-full max-w-[112px] mb-12">
            <img src="~/img/LurnyxLogo1Square.svg" class="h-28 w-full object-contain dark:hidden" alt="logo">
            <img src="~/img/LurnyxLogo1SquareWhite.svg" class="h-28 w-full object-contain hidden dark:block"
                 alt="logo dark">
        </div>

        <!-- Reset Password Card -->
        <div class="w-full max-w-[515px] p-8 border border-[rgba(2,43,58,0.54)] dark:border-[#ffffff33] rounded-lg shadow-lg dark:bg-white/10 dark:backdrop-blur">
            <!-- Title -->
            <h1 class="text-[#022B3A] dark:text-white text-3xl font-semibold mb-2">Reset Password</h1>
            <p class="text-[#022B3A] dark:text-white text-base font-medium tracking-wider mb-8">
                Enter your new password below
            </p>
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>

            <!-- Password Input Form -->
            <form asp-controller="Account" asp-action="ResetPassword" method="post" id="resetPasswordForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Token" />

                <!-- New Password -->
                <div class="mb-6">
                    <label asp-for="Password" class="block text-[#022B3A] dark:text-[#feffff] text-sm font-medium tracking-wider mb-2">New Password</label>
                    <div class="relative">
                        <input asp-for="Password" type="password"
                               class="w-full h-10 border border-[#144557] dark:border-white rounded-md pl-4 text-[#1F7A8C] dark:text-[#f4fdff] dark:bg-transparent text-sm font-medium tracking-wider placeholder-[#1F7A8C]/50 dark:placeholder-[#f4fdff]/70"
                               placeholder="Enter new password" required>
                        <button type="button" class="absolute right-3 top-2.5 toggle-password cursor-pointer">
                            <svg class="show-password-icon h-5 w-5 text-[#144557] dark:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            <svg class="hide-password-icon h-5 w-5 text-[#144557] dark:text-white hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>

                <!-- Confirm New Password -->
                <div class="mb-8">
                    <label asp-for="ConfirmPassword" class="block text-[#022B3A] dark:text-[#feffff] text-sm font-medium tracking-wider mb-2">Confirm New Password</label>
                    <div class="relative">
                        <input asp-for="ConfirmPassword" type="password"
                               class="w-full h-10 border border-[#144557] dark:border-white rounded-md pl-4 text-[#1F7A8C] dark:text-[#f4fdff] dark:bg-transparent text-sm font-medium tracking-wider placeholder-[#1F7A8C]/50 dark:placeholder-[#f4fdff]/70"
                               placeholder="Confirm new password" required>
                        <button type="button" class="absolute right-3 top-2.5 toggle-password cursor-pointer">
                            <svg class="show-password-icon h-5 w-5 text-[#144557] dark:text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            <svg class="hide-password-icon h-5 w-5 text-[#144557] dark:text-white hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                        </button>
                    </div>
                     <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
                </div>

                <!-- Reset Password Button -->
                <div class="flex justify-center">
                    <button type="submit"
                            class="h-10 bg-[#022B3A] dark:bg-[#2d92a6] rounded-md shadow-md text-white text-base font-semibold px-8 hover:bg-[#03435a] dark:hover:bg-[#3aa5c0] transition-colors cursor-pointer">
                        Reset Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Password visibility toggle
        document.querySelectorAll('.toggle-password').forEach(button => {
            button.addEventListener('click', function () {
                const input = this.parentElement.querySelector('input');
                const showIcon = this.querySelector('.show-password-icon');
                const hideIcon = this.querySelector('.hide-password-icon');

                if (input.type === 'password') {
                    input.type = 'text';
                    showIcon.classList.add('hidden');
                    hideIcon.classList.remove('hidden');
                } else {
                    input.type = 'password';
                    showIcon.classList.remove('hidden');
                    hideIcon.classList.add('hidden');
                }
            });
        });

        // Form validation
        document.getElementById('resetPasswordForm').addEventListener('submit', function(e) {
            const newPassword = document.getElementById('Password').value;
            const confirmPassword = document.getElementById('ConfirmPassword').value;

            if (!newPassword || !confirmPassword) {
                e.preventDefault();
                toastr.error('Please fill in all password fields');
            } else if (newPassword !== confirmPassword) {
                e.preventDefault();
                toastr.error('Passwords do not match');
            }
        });
    </script>
}
