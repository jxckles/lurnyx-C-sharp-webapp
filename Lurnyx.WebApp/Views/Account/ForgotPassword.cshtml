@using static Lurnyx.Resources.Views.Screen
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/output.css?v=1.0.0" />
}
@{
    ViewData["Title"] = "Forgot Password";
}

<!-- Main Container -->
<div class="flex flex-col items-center justify-center min-h-screen bg-white dark:bg-[#022b3a] px-4 transition-colors duration-300 relative overflow-hidden">
    <!-- Background Wave -->
    <img src="~/img/BackgroundWave.svg"
         class="absolute inset-0 w-full h-full object-cover opacity-0 dark:opacity-100 transition-opacity duration-300 pointer-events-none"
         alt="background wave">

    <!-- Combined Logo + Card Container -->
    <div class="w-full flex flex-col items-center relative pb-117">
        <!-- Added padding for spacing -->
        <!-- Logo -->
        <div class="w-full max-w-[112px] mb-12">
            <!-- Increased mb-12 for better spacing -->
            <img src="~/img/LurnyxLogo1Square.svg" class="h-28 w-full object-contain dark:hidden" alt="logo">
            <img src="~/img/LurnyxLogo1SquareWhite.svg" class="h-28 w-full object-contain hidden dark:block"
                 alt="logo dark">
        </div>

        <!-- Forgot Password Card -->
        <div class="w-full max-w-[515px] p-8 border border-[rgba(2,43,58,0.54)] dark:border-[#ffffff33] rounded-lg shadow-lg dark:bg-white/10 dark:backdrop-blur">
            <!-- Title -->
            <h1 class="text-[#022B3A] dark:text-white text-3xl font-semibold mb-2">Forgot Password?</h1>
            <p class="text-[#022B3A] dark:text-white text-base font-medium tracking-wider mb-8">
                Enter your email below to receive a password reset link.
            </p>

            <!-- Email Input -->
            <form method="post" action="/Account/ForgotPassword" id="forgotPasswordForm">
                @Html.AntiForgeryToken()
                <div class="mb-8">
                    <label for="emailInput" class="block text-[#022B3A] dark:text-[#feffff] text-sm font-medium tracking-wider mb-2">Email</label>
                    <div class="relative">
                        <input type="email" id="emailInput" name="email"
                               class="w-full h-10 border border-[#144557] dark:border-white rounded-md pl-4 text-[#1F7A8C] dark:text-[#f4fdff] dark:bg-transparent text-sm font-medium tracking-wider placeholder-[#1F7A8C]/50 dark:placeholder-[#f4fdff]/70"
                               placeholder="Enter your email" required>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="flex items-center justify-between">
                    <a asp-controller="Account" asp-action="Login"
                       class="text-[#144557] dark:text-white text-sm font-medium tracking-wider hover:underline">Back to Login</a>

                    <button type="submit"
                            class="h-10 bg-[#022B3A] dark:bg-[#2d92a6] rounded-md shadow-md text-white text-base font-semibold px-6 hover:bg-[#03435a] dark:hover:bg-[#3aa5c0] transition-colors cursor-pointer">
                        Proceed
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script>
        document.getElementById('forgotPasswordForm').addEventListener('submit', function(e) {
            const email = document.getElementById('emailInput').value;
            if (!email) {
                e.preventDefault();
                toastr.error('Please enter your email');
            }
        });
    </script>
}