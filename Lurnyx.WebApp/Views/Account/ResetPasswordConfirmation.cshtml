@using static Lurnyx.Resources.Views.Screen
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/output.css?v=1.0.0" />
}
@{
    ViewData["Title"] = "Password Reset Successful";
}

<!-- Main Container -->
<div class="flex flex-col items-center justify-center min-h-screen bg-white dark:bg-[#022b3a] px-4 transition-colors duration-300 relative overflow-hidden">
    <!-- Background Wave -->
    <img src="~/img/BackgroundWave.svg"
         class="absolute inset-0 w-full h-full object-cover opacity-0 dark:opacity-100 transition-opacity duration-300 pointer-events-none"
         alt="background wave">

    <!-- Combined Logo + Card Container -->
    <div class="w-full flex flex-col items-center relative pb-117">
        <!-- Logo -->
        <div class="w-full max-w-[112px] mb-12">
            <img src="~/img/LurnyxLogo1Square.svg" class="h-28 w-full object-contain dark:hidden" alt="logo">
            <img src="~/img/LurnyxLogo1SquareWhite.svg" class="h-28 w-full object-contain hidden dark:block"
                 alt="logo dark">
        </div>

        <!-- Confirmation Card -->
        <div class="w-full max-w-[515px] p-8 text-center border border-[rgba(2,43,58,0.54)] dark:border-[#ffffff33] rounded-lg shadow-lg dark:bg-white/10 dark:backdrop-blur">
            
            <!-- Icon -->
            <div class="flex justify-center mb-6">
                <svg class="h-16 w-16 text-[#022B3A] dark:text-[#2d92a6]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>

            <!-- Title -->
            <h1 class="text-[#022B3A] dark:text-white text-3xl font-semibold mb-2">Password Reset Successfully</h1>
            <p class="text-[#022B3A] dark:text-white text-base font-medium tracking-wider mb-8">
                Your password has been changed. You can now log in with your new password.
            </p>

            <!-- Go to Login Button -->
            <div class="flex justify-center">
                 <a asp-controller="Account" asp-action="Login"
                       class="h-10 inline-flex items-center bg-[#022B3A] dark:bg-[#2d92a6] rounded-md shadow-md text-white text-base font-semibold px-8 hover:bg-[#03435a] dark:hover:bg-[#3aa5c0] transition-colors cursor-pointer">
                    Go to Login
                </a>
            </div>
        </div>
    </div>
</div>
