@using Lurnyx.Services.ServiceModels
@model UserDto
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/output.css?v=1.0.0" />
}
@{
    ViewData["Title"] = "Register Page";
}

<partial name="_LoadingScreen" />

<!-- Centered Logo + Registration Container -->
<div class="flex flex-col items-center justify-center min-h-screen bg-white dark:bg-[#022b3a] px-4 transition-colors duration-300 relative overflow-hidden pb-16">
    <!-- Theme Toggle -->
    <button id="login-theme-toggle" type="button"
            class="absolute top-4 right-4 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg p-2.5">
        <svg id="login-theme-toggle-dark-icon" class="w-5 h-5 hidden" fill="currentColor" viewBox="0 0 20 20"
             xmlns="http://www.w3.org/2000/svg">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
        </svg>
        <svg id="login-theme-toggle-light-icon" class="w-5 h-5 hidden" fill="currentColor" viewBox="0 0 20 20"
             xmlns="http://www.w3.org/2000/svg">
            <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
                  fill-rule="evenodd" clip-rule="evenodd"></path>
        </svg>
    </button>

    <img src="~/img/BackgroundWave.svg"
         class="absolute inset-0 w-full h-full object-cover opacity-0 dark:opacity-100 transition-opacity duration-300 pointer-events-none"
         alt="background wave">

    <!-- Logo - Reduced margin-bottom -->
    <div class="mb-4 w-full max-w-[112px] z-1">
        <img src="~/img/LurnyxLogo1Square.svg" class="h-28 w-full object-contain dark:hidden" alt="logo">
        <img src="~/img/LurnyxLogo1SquareWhite.svg" class="h-28 w-full object-contain hidden dark:block"
             alt="logo dark">
    </div>

    <!-- Registration Container -->
    <div class="flex flex-col lg:flex-row border border-[rgba(2,43,58,0.54)] dark:border-[rgba(255,255,255,0.2)] rounded-lg overflow-hidden shadow-lg w-full max-w-[1106px] h-auto min-h-[570px] lg:min-h-[618px]">
        <!-- Left Side: Registration Form -->
        <div class="w-full lg:w-1/2 p-8 lg:p-10 flex flex-col justify-center gap-5 dark:bg-white/10 dark:backdrop-blur">
            <div class="mb-5">
                <h1 class="text-[#022B3A] dark:text-white text-2xl lg:text-3xl font-semibold">
                    Join Our Knowledge Hub
                </h1>
                <p class="text-[#022B3A] dark:text-white text-sm lg:text-base font-medium tracking-wider">
                    Sign up to access thousands of learning resources
                </p>
            </div>

            <!-- Register Form -->
            <form method="post" action="/Account/Register" id="registerForm" class="flex flex-col gap-4">
                <!-- First + Last Name Row -->
                <div class="flex flex-col sm:flex-row gap-4">
                    <!-- First Name -->
                    <div class="w-full sm:w-1/2">
                        <label class="block text-[#022B3A] dark:text-[#feffff] text-sm font-medium tracking-wider mb-2">
                            First Name
                        </label>
                        <div class="relative">
                            <input type="text" asp-for="FirstName"
                                   class="w-full h-10 border border-[#144557] dark:border-white rounded-md pl-4 text-[#1F7A8C] dark:text-[#f4fdff] dark:bg-transparent text-sm font-medium tracking-wider placeholder-[#1F7A8C]/50 dark:placeholder-[#f4fdff]/70"
                                   placeholder="Juan">
                            <span asp-validation-for="FirstName"
                                  class="text-red-600 dark:text-red-300 absolute -bottom-5 left-0 text-xs"></span>
                        </div>
                    </div>

                    <!-- Last Name -->
                    <div class="w-full sm:w-1/2">
                        <label class="block text-[#022B3A] dark:text-[#feffff] text-sm font-medium tracking-wider mb-2">
                            Last Name
                        </label>
                        <div class="relative">
                            <input type="text" asp-for="LastName"
                                   class="w-full h-10 border border-[#144557] dark:border-white rounded-md pl-4 text-[#1F7A8C] dark:text-[#f4fdff] dark:bg-transparent text-sm font-medium tracking-wider placeholder-[#1F7A8C]/50 dark:placeholder-[#f4fdff]/70"
                                   placeholder="Dela Cruz">
                            <span asp-validation-for="LastName"
                                  class="text-red-600 dark:text-red-300 absolute -bottom-5 left-0 text-xs"></span>
                        </div>
                    </div>
                </div>

                <!-- Email -->
                <div>
                    <label class="block text-[#022B3A] dark:text-[#feffff] text-sm font-medium tracking-wider mb-2">Email</label>
                    <div class="relative">
                        <input type="email" asp-for="Email"
                               class="w-full h-10 border border-[#144557] dark:border-white rounded-md pl-4 text-[#1F7A8C] dark:text-[#f4fdff] dark:bg-transparent text-sm font-medium tracking-wider placeholder-[#1F7A8C]/50 dark:placeholder-[#f4fdff]/70"
                               placeholder="Enter your email">
                        <span asp-validation-for="Email"
                              class="text-red-600 dark:text-red-300 text-xs font-medium leading-snug animate-pulse transition-all duration-300"></span>
                    </div>
                </div>

                <!-- Password -->
                <div>
                    <label class="block text-[#022B3A] dark:text-[#feffff] text-sm font-medium tracking-wider mb-2">Password</label>
                    <div class="relative">
                        <input type="password" asp-for="Password"
                               class="w-full h-10 border border-[#144557] dark:border-white rounded-md pl-4 text-[#1F7A8C] dark:text-[#f4fdff] dark:bg-transparent text-sm font-semibold tracking-wider placeholder-[#1F7A8C]/50 dark:placeholder-[#f4fdff]/70"
                               placeholder="Enter your password">
                        <button type="button" class="absolute right-3 top-2.5 toggle-password cursor-pointer">
                            <svg id="showPasswordIcon2" xmlns="http://www.w3.org/2000/svg"
                                 class="h-5 w-5 text-[#144557] dark:text-white" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            <svg id="hidePasswordIcon2" xmlns="http://www.w3.org/2000/svg"
                                 class="h-5 w-5 text-[#144557] dark:text-white hidden" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                        </button>
                        <p class="text-xs text-[#1F7A8C] dark:text-[#cde8f3] mt-1 italic">
                            Must be at least 8 characters, include uppercase, number, and symbol.
                        </p>
                        <span asp-validation-for="Password"
                              class="text-red-600 dark:text-red-300 text-xs font-medium leading-snug animate-pulse transition-all duration-300"></span>
                    </div>
                </div>

                <!-- Confirm Password -->
                <div>
                    <label class="block text-[#022B3A] dark:text-[#feffff] text-sm font-medium tracking-wider mb-2">
                        Confirm Password
                    </label>
                    <div class="relative">
                        <input type="password" asp-for="ConfirmPassword"
                               class="w-full h-10 border border-[#144557] dark:border-white rounded-md pl-4 text-[#1F7A8C] dark:text-[#f4fdff] dark:bg-transparent text-sm font-semibold tracking-wider placeholder-[#1F7A8C]/50 dark:placeholder-[#f4fdff]/70"
                               placeholder="Confirm your password">
                        <button type="button" class="absolute right-3 top-2.5 toggle-password cursor-pointer">
                            <svg id="showPasswordIcon2" xmlns="http://www.w3.org/2000/svg"
                                 class="h-5 w-5 text-[#144557] dark:text-white" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            <svg id="hidePasswordIcon2" xmlns="http://www.w3.org/2000/svg"
                                 class="h-5 w-5 text-[#144557] dark:text-white hidden" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                        </button>
                        <p class="text-xs text-[#1F7A8C] dark:text-[#cde8f3] mt-1 italic">
                            Must match the password above.
                        </p>
                        <span asp-validation-for="ConfirmPassword"
                              class="text-red-600 dark:text-red-300 text-xs font-medium leading-snug animate-pulse transition-all duration-300"></span>
                    </div>
                </div>

                <!-- Create Account Button -->
                <button type="submit"
                        class="w-full h-10 bg-[#022B3A] dark:bg-[#2d92a6] rounded-md shadow-md text-white text-base font-semibold hover:bg-[#03435a] dark:hover:bg-[#3aa5c0] transition-colors cursor-pointer mt-4">
                    Create Account
                </button>

                <!-- Sign In Link -->
                <div class="text-center">
                    <span class="text-[#144557] dark:text-white text-sm font-medium tracking-wider">
                        Already have an account?
                    </span>
                    <a asp-controller="Account" asp-action="Login"
                       class="text-[#056588] dark:text-[#60ffec] text-sm font-medium tracking-wider ml-1 hover:underline">
                        Sign in
                    </a>
                </div>
            </form>
        </div>

        <!-- Right Side: Illustration -->
        <div class="w-full lg:w-1/2 bg-white dark:bg-[#163743] dark:bg-white/10 dark:backdrop-blur relative overflow-hidden transition-colors duration-300 hidden lg:block">
            <!-- Image Carousel Container -->
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[80%] h-[80%] max-w-[522px] max-h-[677px] bg-[#2d4f5b] dark:bg-[#163743] rounded-3xl overflow-hidden transition-colors duration-300">
                <!-- Carousel Slides -->
                <div class="flex h-full transition-transform duration-500 ease-in-out" id="carousel-slides">
                    <!-- Slide 1 -->
                    <div class="min-w-full h-full flex items-center justify-center">
                        <img src="~/img/login-image-1.jpg" class="h-full w-full object-cover" alt="Slide 1">
                    </div>
                    <!-- Slide 2 -->
                    <div class="min-w-full h-full flex items-center justify-center">
                        <img src="~/img/login-image-2.jpg" class="h-full w-full object-cover" alt="Slide 2">
                    </div>
                    <!-- Slide 3 -->
                    <div class="min-w-full h-full flex items-center justify-center">
                        <img src="~/img/login-image-3.jpg" class="h-full w-full object-cover" alt="Slide 3">
                    </div>
                </div>
            </div>

            <!-- Carousel Indicators -->
            <div class="absolute bottom-3 left-1/2 transform -translate-x-1/2 flex space-x-4" id="carousel-indicators">
                <div class="w-2 h-2 bg-[#488e9d] dark:bg-[#60ffec] rounded-full cursor-pointer indicator-dot" data-index="0"></div>
                <div class="w-2 h-2 bg-gray-400 dark:bg-gray-600 rounded-full cursor-pointer indicator-dot" data-index="1"></div>
                <div class="w-2 h-2 bg-gray-400 dark:bg-gray-600 rounded-full cursor-pointer indicator-dot" data-index="2"></div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <partial name="_ToastError" />
    <script src="~/js/themeToggle.js" asp-append-version="true"></script>
    <script type="module">

        import { LoadingScreen } from '/js/loadingScreen.js';

        // Password visibility toggle
        document.querySelectorAll('.toggle-password').forEach(button => {
            button.addEventListener('click', function () {
                const input = this.parentElement.querySelector('input');
                const showIcon = this.querySelector('#showPasswordIcon, #showPasswordIcon2');
                const hideIcon = this.querySelector('#hidePasswordIcon, #hidePasswordIcon2');

                if (input.type === 'password') {
                    input.type = 'text';
                    showIcon.classList.add('hidden');
                    hideIcon.classList.remove('hidden');
                } else {
                    input.type = 'password';
                    showIcon.classList.remove('hidden');
                    hideIcon.classList.add('hidden');
                }
            });
        });

        // Toastr error display
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }

        // Form submission handler
        /*document.getElementById('registerForm').addEventListener('submit', () => {
                   LoadingScreen.show();
               });*/

        // Carousel functionality
        document.addEventListener('DOMContentLoaded', function () {
            const carousel = document.getElementById('carousel-slides');
            if (!carousel) return;

            const indicators = document.querySelectorAll('.indicator-dot');
            let currentIndex = 0;
            const totalSlides = 3;
            let interval;

            // Theme-aware color update function
            const updateIndicatorColors = () => {
                const isDark = document.documentElement.classList.contains('dark');
                const activeColor = isDark ? '#60ffec' : '#488e9d';
                const inactiveColor = isDark ? 'rgb(75, 85, 99)' : 'rgb(156, 163, 175)';

                indicators.forEach((dot, index) => {
                    dot.style.backgroundColor = index === currentIndex ? activeColor : inactiveColor;
                });
            };

            function updateCarousel() {
                carousel.style.transform = `translateX(-${currentIndex * 100}%)`;
                updateIndicatorColors();
            }

            function nextSlide() {
                currentIndex = (currentIndex + 1) % totalSlides;
                updateCarousel();
            }

            // Auto-rotate every 3 seconds
            function startCarousel() {
                interval = setInterval(nextSlide, 3000);
            }

            // Manual navigation with indicators
            indicators.forEach(dot => {
                dot.addEventListener('click', function () {
                    clearInterval(interval);
                    currentIndex = parseInt(this.getAttribute('data-index'));
                    updateCarousel();
                    startCarousel();
                });
            });

            // Initialize with correct colors
            updateIndicatorColors();

            // Watch for theme changes
            const observer = new MutationObserver(updateIndicatorColors);
            observer.observe(document.documentElement, {
                attributes: true,
                attributeFilter: ['class']
            });

            // Start the carousel
            startCarousel();
        });    
    </script>
}