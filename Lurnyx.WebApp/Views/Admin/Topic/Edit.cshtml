@model Lurnyx.Services.ServiceModels.TopicDto
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Edit Topic";
}

<div class="container px-4 py-8 mx-auto">
    <!-- Page Heading -->
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-2xl font-bold text-gray-800">Edit Topic</h1>
        <a href="@Url.Action("Index")"
            class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Topic List
        </a>
    </div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data"
        class="w-full bg-white rounded-xl shadow-sm p-8">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CoverImageUrl" />

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Left Column -->
            <div class="space-y-6">
                <!-- Topic Title -->
                <div>
                    <label asp-for="Title" class="block text-lg font-medium text-gray-700 mb-2"></label>
                    <input asp-for="Title"
                        class="block w-full rounded-lg bg-white py-3 px-4 text-base text-gray-900 placeholder:text-gray-400 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20"
                        placeholder="Enter topic title">
                    <p class="text-right text-xs text-gray-700"><span id="titleCharCount">0</span>/100</p>
                    <span asp-validation-for="Title" class="text-red-600 text-sm"></span>
                </div>

                <!-- Description -->
                <div>
                    <label asp-for="Description" class="block text-lg font-medium text-gray-700 mb-2"></label>
                    <textarea asp-for="Description" rows="4"
                        class="block w-full rounded-lg bg-white py-3 px-4 text-base text-gray-900 placeholder:text-gray-400 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20"
                        placeholder="Enter topic description"></textarea>
                    <p class="text-right text-xs text-gray-700">
                        <span id="charCount">0</span>/500
                    </p>
                    <span asp-validation-for="Description" class="text-red-600 text-sm"></span>

                </div>

                <!-- Training Selection -->
                <div>
                    <label asp-for="TrainingId" class="block text-lg font-medium text-gray-700 mb-2"></label>
                    <div class="relative">
                        <select asp-for="TrainingId" asp-items="@(new SelectList(Model.TrainingList, "Id", "Title"))"
                            class="block w-full rounded-lg bg-white py-3 px-4 text-base text-gray-900 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20 appearance-none">
                            <option value="">Select training</option>
                        </select>
                        <div
                            class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                    <span asp-validation-for="TrainingId" class="text-red-600 text-sm"></span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Duration -->
                    <div>
                        <label class="block text-lg font-medium text-gray-700 mb-2">Duration (minutes)</label>
                        <input asp-for="DurationInMinutes" type="number"
                            class="block w-full rounded-lg bg-white py-3 px-4 text-base text-gray-900 placeholder:text-gray-400 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20"
                            placeholder="e.g., 45">
                        <span asp-validation-for="DurationInMinutes" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Order Number -->
                    <div>
                        <label asp-for="Order" class="block text-lg font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Order" type="number"
                            class="block w-full rounded-lg bg-white py-3 px-4 text-base text-gray-900 placeholder:text-gray-400 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20"
                            placeholder="e.g., 1">
                        <span asp-validation-for="Order" class="text-red-600 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="space-y-6">
                <!-- Topic Cover Image -->
                <div>
                    <label class="block text-lg font-medium text-gray-700 mb-4">Topic Cover Image</label>
                    <div id="imagePreviewContainer" class="mb-4">
                        <img id="imagePreview" class="w-full h-56 object-cover rounded-xl"
                            src="@(!string.IsNullOrEmpty(Model.CoverImageUrl) ? Model.CoverImageUrl : "https://placehold.co/900x400?text=No+Image")"
                            alt="Preview of @Model.Title" />
                    </div>
                    <div class="mt-2">
                        <label for="ImageFile" class="cursor-pointer">
                            <span
                                class="px-3 py-1.5 text-[#022B3A] font-semibold rounded-lg hover:bg-[#022B3A]/10 transition-colors">
                                @(string.IsNullOrEmpty(Model.CoverImageUrl) ? "Upload Image" : "Change Image")
                            </span>
                            <input asp-for="ImageFile" type="file" class="sr-only" accept="image/png, image/jpeg, image/webp"
                                onchange="validateAndPreviewImage(this)">
                        </label>
                        <span id="imageValidationError" class="text-red-500 text-xs mt-2 hidden ml-4"></span>
                    </div>
                </div>

                <!-- Resources Section -->
                <div>
                    <label class="block text-lg font-medium text-gray-700 mb-2">Topic Resources</label>

                    <!-- Existing Resources -->
                    <div id="existingResourcesList" class="space-y-3 mb-4">
                        @for (int i = 0; i < Model.ResourceMaterials.Count; i++)
                        {
                            <div
                                class="existing-resource-item bg-gray-100 p-3 rounded-lg border flex items-center justify-between">
                                <input type="hidden" asp-for="ResourceMaterials[i].Id" />
                                <input type="hidden" asp-for="ResourceMaterials[i].Name" />
                                <input type="hidden" asp-for="ResourceMaterials[i].FileType" />
                                <input type="hidden" asp-for="ResourceMaterials[i].FileAccessUrl" />
                                <div class="flex items-center">
                                    <i
                                        class="fas @(Model.ResourceMaterials[i].FileType switch { "PDF" => "fa-file-pdf", "PPTX" => "fa-file-powerpoint", "PNG" => "fa-file-image", "MP4" => "fa-file-video", "URL" => "fa-link", _ => "fa-file" }) text-lg text-gray-500 mr-3"></i>
                                    <span class="font-medium text-gray-700">@Model.ResourceMaterials[i].Name</span>
                                </div>
                                <div class="flex items-center">
                                    <a href="@Model.ResourceMaterials[i].FileAccessUrl" target="_blank"
                                        class="text-blue-600 hover:underline mr-4 text-sm">View</a>
                                    <label class="flex items-center text-sm text-red-600 cursor-pointer">
                                        <input type="checkbox" asp-for="ResourceMaterials[i].IsMarkedForDeletion"
                                            class="h-4 w-4 rounded border-gray-300 text-red-600 focus:ring-red-500 mr-2">
                                        Delete
                                    </label>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Add New Resources Section -->
                    <div class="flex items-center justify-start bg-slate-100 p-2 rounded-lg mb-4">
                        <p class="text-sm font-medium mr-4 text-gray-600">Add a new resource:</p>
                        <div class="flex items-center space-x-2">
                            <button type="button" onclick="addResource('PPTX')" title="Add PowerPoint"
                                class="resource-type-btn p-2 rounded-md text-sm font-semibold flex items-center transition-colors hover:bg-slate-200">
                                <img src="~/img/trainingmaterials_img/ppt-icon.svg" alt="PPT" class="h-5 w-5" />
                            </button>
                            <button type="button" onclick="addResource('PDF')" title="Add PDF"
                                class="resource-type-btn p-2 rounded-md text-sm font-semibold flex items-center transition-colors hover:bg-slate-200">
                                <img src="~/img/trainingmaterials_img/pdf-icon.svg" alt="PDF" class="h-5 w-5" />
                            </button>
                            <button type="button" onclick="addResource('PNG')" title="Add Image"
                                class="resource-type-btn p-2 rounded-md text-sm font-semibold flex items-center transition-colors hover:bg-slate-200">
                                <img src="~/img/trainingmaterials_img/png-icon.png" alt="Image" class="h-5 w-5" />
                            </button>
                            <button type="button" onclick="addResource('MP4')" title="Add Video File"
                                class="resource-type-btn p-2 rounded-md text-sm font-semibold flex items-center transition-colors hover:bg-slate-200">
                                <i class="fas fa-video text-lg text-gray-600"></i>
                            </button>
                            <button type="button" onclick="addResource('URL')" title="Add Video URL"
                                class="resource-type-btn p-2 rounded-md text-sm font-semibold flex items-center transition-colors hover:bg-slate-200">
                                <i class="fas fa-link text-lg text-gray-600"></i>
                            </button>
                        </div>
                    </div>

                    <div id="resourceUploadContainer" class="space-y-4">

                        <!-- Dynamic resource forms will be inserted here -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Update Button -->
        <div class="flex justify-end mt-8">
            <button type="submit"
                    class="group flex items-center focus:outline-none transition-transform hover:scale-[1.02] active:scale-95">
                <span class="flex items-center gap-2 bg-[#022B3A] text-white px-6 py-3 rounded-lg shadow-md hover:bg-[#022B3A]/90 transition-all duration-300 hover:shadow-lg font-semibold text-lg">
                    <!-- Update icon (Heroicons) -->
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-white group-hover:rotate-6 transition-transform">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
                    </svg>
                    Update Topic
                </span>
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_ToastError" />

    @await Html.PartialAsync("_ImageValidationScriptPartial")
    @await Html.PartialAsync("_FileValidationScriptPartial")
    @await Html.PartialAsync("_TrainingTextFieldValidation")
}
