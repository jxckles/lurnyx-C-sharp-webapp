@using static Lurnyx.Resources.Constants.Enums
@model Lurnyx.Services.ServiceModels.TrainingDto
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Create Training";
}

<div class="container px-4 py-8 mx-auto">
    <!-- Page Heading -->
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-2xl font-bold text-gray-800">Create New Training</h1>
        <a href="@Url.Action("Index")"
            class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Training List
        </a>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data"
        class="w-full bg-white rounded-lg shadow-sm p-6">
        @Html.AntiForgeryToken()

        <!-- Training Image Section -->
        <div class="mb-8">
            <label class="block text-lg font-medium text-gray-700 mb-4">Training Image</label>

            <div id="imagePreviewContainer" class="hidden relative mb-4">
                <img id="imagePreview" class="w-full h-56 object-cover rounded-xl" src="" alt="Training preview" />

                <button type="button" onclick="clearImage()"
                        class="absolute top-1 right-0 mr-2 bg-white/80 dark:bg-gray-800/80 rounded-full p-1 hover:bg-white dark:hover:bg-gray-700 transition-colors">
                    <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div id="uploadArea">
                <div
                    class="flex flex-col h-56 items-center justify-center rounded-md border-2 border-dashed border-gray-300 px-6 py-8 focus-within:border-[#022B3A] focus-within:outline-none hover:border-gray-400 transition-colors">
                    <i class="fas fa-image text-4xl text-gray-400 mb-3"></i>
                    <label for="ImageFile" class="cursor-pointer">
                        <span
                            class="px-4 py-2 border border-[#022B3A] text-[#022B3A] font-semibold rounded-lg hover:bg-[#022B3A]/10 transition-colors">
                            Upload Image
                        </span>
                        <input asp-for="ImageFile" type="file" class="sr-only"
                            accept="image/png, image/jpeg, image/webp" onchange="validateAndPreviewImage(this)">
                    </label>
                    <p class="mt-2 text-xs text-gray-500">PNG, JPG, WEBP up to 2MB</p>
                </div>
            </div>
            <span id="imageValidationError" class="text-red-500 text-xs mt-2 hidden"></span>
        </div>

        <!-- Form Fields -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <!-- Training Title -->
            <div>
                <label asp-for="Title" class="block text-lg font-medium text-gray-700 mb-2"></label>
                <input asp-for="Title"
                    class="block w-full rounded-lg bg-white py-2.5 px-4 text-base text-gray-900 placeholder:text-gray-400 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20"
                    placeholder="Enter training title">
                <p class="text-right text-xs text-gray-700"><span id="titleCharCount">0</span>/100</p>
                <span asp-validation-for="Title" class="text-red-500 text-xs"></span>
            </div>

            <!-- Category -->
            <div>
                <label class="block text-lg font-medium text-gray-700 mb-2">Training Category</label>
                <div class="relative">
                    <select asp-for="TrainingCategoryId" asp-items="@(new SelectList(Model.CategoryList, "Id", "Name"))"
                        class="block w-full rounded-lg bg-white py-2.5 px-4 text-base text-gray-900 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20 appearance-none">
                        <option value="">Select a Category</option>
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
                <span asp-validation-for="TrainingCategoryId" class="text-red-500 text-xs"></span>
            </div>

            <!-- Description -->
            <div class="md:col-span-2">
                <label asp-for="Description" class="block text-lg font-medium text-gray-700 mb-2"></label>
                <textarea asp-for="Description" rows="4"
                    class="block w-full rounded-lg bg-white py-2.5 px-4 text-base text-gray-900 placeholder:text-gray-400 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20"
                    placeholder="Enter training description"></textarea>
                <p p class="text-right text-xs text-gray-700">
                    <span id="charCount">0</span>/500
                </p>
                <span asp-validation-for="Description" class="text-red-500 text-xs"></span>
            </div>

            <!-- Difficulty Level -->
            <div>
                <label asp-for="Difficulty" class="block text-lg font-medium text-gray-700 mb-2"></label>
                <div class="relative">
                    <select asp-for="Difficulty" asp-items="Html.GetEnumSelectList<TrainingDifficulty>()"
                        class="block w-full rounded-lg bg-white py-2.5 px-4 text-base text-gray-900 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20 appearance-none">
                        <option value="">Select a Level</option>
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
                <span asp-validation-for="Difficulty" class="text-red-500 text-xs"></span>
            </div>

        </div>

        <!-- Submit Button -->
        <div class="flex justify-end mt-8 col-span-2">
            <button type="submit"
                class="group flex items-center focus:outline-none transition-transform hover:scale-105">
                <span
                    class="flex items-center bg-[#022B3A] text-white px-8 py-3 rounded-lg shadow-md hover:bg-[#022B3A]/90 transition-all duration-300 hover:shadow-lg font-bold text-lg">
                    <i class="fas fa-plus mr-2"></i>
                    Add Training
                </span>
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_ToastError" />
    @await Html.PartialAsync("_ImageValidationScriptPartial")
    @await Html.PartialAsync("_TrainingTextFieldValidation")
}
