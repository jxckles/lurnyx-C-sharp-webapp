@using static Lurnyx.Resources.Constants.Enums
@model Lurnyx.Services.ServiceModels.TrainingDto
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Edit Training";
}

<div class="container px-4 py-8 mx-auto">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-2xl font-bold text-[#022b3a]">Edit Training</h1>
        <a href="@Url.Action("Index")"
            class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Training List
        </a>
    </div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data"
        class="w-full bg-white rounded-lg shadow-sm p-6">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CoverImageUrl" />

        <div class="mb-8">
            <label class="block text-lg font-medium text-gray-700 mb-4">Training Image</label>
            <div id="imagePreviewContainer" class="mb-4">
                <img id="imagePreview" class="w-full h-56 object-cover rounded-xl"
                    src="@(!string.IsNullOrEmpty(Model.CoverImageUrl) ? Model.CoverImageUrl : "https://placehold.co/900x400?text=No+Image")"
                    alt="Preview of @Model.Title" />
            </div>
            <div class="mt-2">
                <label for="ImageFile" class="cursor-pointer">
                    <span
                        class="px-3 py-1.5 text-[#022B3A] font-semibold rounded-lg hover:bg-[#022B3A]/10 transition-colors">
                        @(string.IsNullOrEmpty(Model.CoverImageUrl) ? "Upload Image" : "Change Image")
                    </span>
                    <input asp-for="ImageFile" type="file" class="sr-only" accept="image/png, image/jpeg, image/webp"
                        onchange="validateAndPreviewImage(this)">
                </label>
                <span id="imageValidationError" class="text-red-500 text-xs mt-2 hidden ml-4"></span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
                <label asp-for="Title" class="block text-lg font-medium text-gray-700 mb-2"></label>
                <input asp-for="Title"
                    class="block w-full rounded-lg bg-white py-2.5 px-4 text-base text-gray-900 placeholder:text-gray-400 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20">
                <p class="text-right text-xs text-gray-700"><span id="titleCharCount">0</span>/100</p>
                <span asp-validation-for="Title" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label class="block text-lg font-medium text-gray-700 mb-2">Training Category</label>
                <div class="relative">
                    <select asp-for="TrainingCategoryId" asp-items="@(new SelectList(Model.CategoryList, "Id", "Name"))"
                        class="block w-full rounded-lg bg-white py-2.5 px-4 text-base text-gray-900 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20 appearance-none">
                        <option value="">Select a Category</option>
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"><i
                            class="fas fa-chevron-down"></i></div>
                </div>
                <span asp-validation-for="TrainingCategoryId" class="text-red-500 text-xs"></span>
            </div>

            <div class="md:col-span-2">
                <label asp-for="Description" class="block text-lg font-medium text-gray-700 mb-2"></label>
                <textarea asp-for="Description" rows="4"
                    class="block w-full rounded-lg bg-white py-2.5 px-4 text-base text-gray-900 placeholder:text-gray-400 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20"></textarea>
                <p class="text-right text-xs text-gray-700">
                    <span id="charCount">0</span>/500
                </p>
                <span asp-validation-for="Description" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label asp-for="Difficulty" class="block text-lg font-medium text-gray-700 mb-2"></label>
                <div class="relative">
                    <select asp-for="Difficulty" asp-items="Html.GetEnumSelectList<TrainingDifficulty>()"
                        class="block w-full rounded-lg bg-white py-2.5 px-4 text-base text-gray-900 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20 appearance-none">
                        <option value="">Select a Level</option>
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"><i
                            class="fas fa-chevron-down"></i></div>
                </div>
                <span asp-validation-for="Difficulty" class="text-red-500 text-xs"></span>
            </div>

        </div>

        <!-- Update Button -->
        <div class="flex justify-end mt-8">
            <button type="submit"
                    class="group flex items-center focus:outline-none transition-transform hover:scale-[1.02] active:scale-95">
                <span class="flex items-center gap-2 bg-[#022B3A] text-white px-6 py-3 rounded-lg shadow-md hover:bg-[#022B3A]/90 transition-all duration-300 hover:shadow-lg font-semibold text-lg">
                    <!-- Update icon (Heroicons) -->
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-white group-hover:rotate-6 transition-transform">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
                    </svg>
                    Update Training
                </span>
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_ToastError" />
    @await Html.PartialAsync("_ImageValidationScriptPartial")
    @await Html.PartialAsync("_TrainingTextFieldValidation")
}
