@model Lurnyx.Services.ServiceModels.UserDto;
@using static Lurnyx.Resources.Constants.Enums;
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Detail User Account";
}

<div class="container px-4 py-8">
    <!-- Page Heading -->
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-2xl font-bold text-gray-800">Edit User Data</h1>
        <a href="@Url.Action("Index")"
            class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to User List
        </a>
    </div>

    <form asp-action="Edit" method="post" class="w-full bg-white rounded-lg shadow-sm p-6">
        <input type="hidden" asp-for="Id" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <!-- First Name -->
            <div>
                <label class="block text-lg font-medium text-gray-700 mb-2">First Name</label>
                <div class="relative">
                    <input asp-for="FirstName"
                        class="block w-full rounded-lg bg-white py-2.5 px-4 text-base text-gray-900 placeholder:text-gray-400 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20"
                        placeholder="Enter first name">
                    <span asp-validation-for="FirstName" class="text-red-500 text-xs"></span>
                </div>
            </div>

            <!-- Last Name -->
            <div>
                <label class="block text-lg font-medium text-gray-700 mb-2">Last Name</label>
                <div class="relative">
                    <input asp-for="LastName"
                        class="block w-full rounded-lg bg-white py-2.5 px-4 text-base text-gray-900 placeholder:text-gray-400 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20"
                        placeholder="Enter last name">
                    <span asp-validation-for="LastName" class="text-red-500 text-xs"></span>
                </div>
            </div>

            <!-- Email -->
            <div>
                <label asp-for="Email" class="block text-lg font-medium text-gray-700 mb-2"></label>
                <div class="relative">
                    <input asp-for="Email"
                        class="block w-full rounded-lg bg-white py-2.5 px-4 text-base text-gray-900 placeholder:text-gray-400 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20"
                        placeholder="Enter email">
                    <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                </div>
            </div>

            <!-- Role -->
            <div>
                <label asp-for="Role" class="block text-lg font-medium text-gray-700 mb-2"></label>
                <div class="relative">
                    <select asp-for="Role"
                        class="block w-full rounded-lg bg-white py-2.5 px-4 text-base text-gray-900 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20 appearance-none">
                        @foreach (var role in Enum.GetValues(typeof(UserRole)))
                        {
                            var roleName = role.ToString().Replace('_', ' ');
                            var capitalizedRole =
                            System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(roleName.ToLower());
                            <option value="@role">@capitalizedRole</option>
                        }
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                            <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                        </svg>
                    </div>
                    <span asp-validation-for="Role" class="text-red-500 text-xs"></span>
                </div>
            </div>
        </div>

        <!-- Update Button -->
        <div class="flex justify-end mt-8">
            <button type="submit"
                    class="group flex items-center focus:outline-none transition-transform hover:scale-[1.02] active:scale-95">
                <span class="flex items-center gap-2 bg-[#022B3A] text-white px-6 py-3 rounded-lg shadow-md hover:bg-[#022B3A]/90 transition-all duration-300 hover:shadow-lg font-semibold text-lg">
                    <!-- Update icon (Heroicons) -->
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-white group-hover:rotate-6 transition-transform">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
                    </svg>
                    Update User
                </span>
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_ToastError" />
}
