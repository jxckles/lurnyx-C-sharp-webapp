@model Lurnyx.Services.ServiceModels.TrainingCategoryDto
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Edit Training Category";
}

<div class="container px-4 py-8 mx-auto">
    <!-- Page Heading -->
    <div class="flex justify-between items-center mb-6 w-full">
        <div class="flex items-center">
            <h1 class="text-2xl font-bold text-[#022b3a]">Edit Training Category</h1>
        </div>
        <a href="@Url.Action("Index")"
            class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Training Categoy List
        </a>
    </div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data"
        class="w-full bg-white rounded-lg shadow-sm p-6">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CoverImageUrl" /> <!-- Keep existing image URL if not changed -->

        <!-- Category Image Section -->
        <div class="mb-8">
            <label class="block text-lg font-medium text-gray-700 mb-4">Training Image</label>
            <div id="imagePreviewContainer" class="mb-4">
                <img id="imagePreview" class="w-full h-56 object-cover rounded-xl"
                    src="@(!string.IsNullOrEmpty(Model.CoverImageUrl) ? Model.CoverImageUrl : "https://placehold.co/900x400?text=No+Image")"
                    alt="Preview of @Model.Name" />
            </div>
            <div class="mt-2">
                <label for="ImageFile" class="cursor-pointer">
                    <span
                        class="px-3 py-1.5 text-[#022B3A] font-semibold rounded-lg hover:bg-[#022B3A]/10 transition-colors">
                        @(string.IsNullOrEmpty(Model.CoverImageUrl) ? "Upload Image" : "Change Image")
                    </span>
                    <input asp-for="ImageFile" type="file" class="sr-only" accept="image/png, image/jpeg, image/webp"
                        onchange="validateAndPreviewImage(this)">
                </label>
                <span id="imageValidationError" class="text-red-500 text-xs mt-2 hidden ml-4"></span>
            </div>
        </div>

        <!-- Category Name -->
        <div class="mb-6 relative">
            <label asp-for="Name" class="block text-lg text-gray-700 mb-2 font-semibold"></label>
            <input asp-for="Name"
                class="block w-full rounded-lg bg-white py-2.5 px-4 text-base text-gray-900 placeholder:text-gray-400 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20"
                placeholder="Enter category name">
            <div class="text-right text-sm text-gray-500 mt-1">
                <span id="nameCharCount">0</span>/50
            </div>
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <!-- Description -->
        <div class="mb-10 relative">
            <label asp-for="Description" class="block text-lg text-gray-700 mb-2 font-semibold"></label>
            <textarea asp-for="Description" rows="4"
                class="block w-full rounded-lg bg-white py-2.5 px-4 text-base text-gray-900 placeholder:text-gray-400 border border-gray-300 focus:border-[#022B3A] focus:ring-2 focus:ring-[#022B3A]/20"
                placeholder="Enter category description"></textarea>
            <p class="text-right text-xs text-gray-700">
                <span id="charCount">0</span>/250
            </p>
            <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
        </div>

        <!-- Update Button -->
        <div class="flex justify-end mt-8">
            <button type="submit"
                    class="group flex items-center focus:outline-none transition-transform hover:scale-[1.02] active:scale-95">
                <span class="flex items-center gap-2 bg-[#022B3A] text-white px-6 py-3 rounded-lg shadow-md hover:bg-[#022B3A]/90 transition-all duration-300 hover:shadow-lg font-semibold text-lg">
                    <!-- Update icon (Heroicons) -->
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-white group-hover:rotate-6 transition-transform">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
                    </svg>
                    Update Category
                </span>
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_ToastError" />
    @await Html.PartialAsync("_ImageValidationScriptPartial")
    @await Html.PartialAsync("_TrainingCatTextFieldValidation")
}
