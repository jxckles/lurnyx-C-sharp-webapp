@model Lurnyx.WebApp.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

@section styles {
    <link rel="stylesheet" href="~/css/output.css?v=1.0.0" />
}

<!-- Background Wave for Dark Mode -->
<div>
    <img src="~/img/BackgroundWave2.svg"
         class="fixed inset-0 w-screen h-screen object-cover opacity-0 dark:opacity-100 transition-opacity duration-300 -z-10 pointer-events-none"
         alt="background wave">
</div>

<!-- Main container with fade-in animation -->
<div class="min-h-screen container mx-auto px-4 sm:px-6 pb-12 space-y-6 sm:space-y-8 dark:text-gray-100">
    <!-- Breadcrumb with fade-in-down animation -->
    <div class="h-16 border-b border-gray-300 dark:border-white/20 flex items-center text-base font-normal text-lg transition-all duration-500 transform opacity-0 animate-fade-in-down">
        <a asp-controller="Profile" asp-action="Index"
           class="text-gray-500 dark:text-gray-400 hover:text-blue-600 flex items-center space-x-2 dark:hover:text-[#1DE6D0] transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-[#1F7A8C] focus:ring-offset-2 rounded">
            <span>User Profile</span>
        </a>
        <span class="text-slate-500 dark:text-gray-400 mx-2">/</span>
        <span class="text-[#022B3A] dark:text-[#1DE6D0] font-semibold">Change Password</span>
    </div>

    <!-- Header with fade-in-down animation -->
    <div class="mt-4 transition-all duration-500 transform opacity-0 animate-fade-in-down" style="animation-delay: 100ms">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white flex items-center gap-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            Change Password
        </h1>
        <p class="text-[#64748b] dark:text-gray-200 mt-1 sm:mt-2">Update your account password securely</p>
    </div>

    <!-- Form with fade-in-up animation -->
    <form method="post" asp-controller="Profile" asp-action="ChangePassword" class="space-y-6 sm:space-y-8 transition-all duration-500 transform opacity-0 animate-fade-in-up">
        <!-- Validation summary -->
        <div asp-validation-summary="ModelOnly" class="text-red-600 dark:text-red-300 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-500/30 rounded-lg"></div>

        <div class="bg-white dark:bg-teal-900/20 rounded-lg shadow-sm border border-gray-200 dark:border-white/20 p-6 sm:p-8 backdrop-blur-sm transition-all duration-200 hover:shadow-md hover:border-[#1F7A8C]/30">
            <h2 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-6 sm:mb-8">Password Information</h2>

            <div class="space-y-6 sm:space-y-8">
                <!-- Current Password -->
                <div>
                    <label asp-for="CurrentPassword" class="block text-sm sm:text-base font-medium text-gray-700 dark:text-gray-200 mb-1 sm:mb-2 flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                        Current Password
                    </label>
                    <div class="relative">
                        <input asp-for="CurrentPassword" type="password" id="currentPassword"
                               class="w-full px-4 py-2.5 sm:py-3 bg-zinc-100/30 border border-gray-300 rounded-lg text-sm sm:text-base text-black font-normal focus:ring-2 focus:ring-[#1f7a8c] focus:border-transparent transition-colors duration-200 dark:text-white dark:bg-gray-800/10 dark:border-white/30 dark:focus:ring-[#2FA3BA]"
                               placeholder="Enter your current password">
                        <button type="button" class="absolute right-3 top-3 toggle-password cursor-pointer">
                            <svg id="showCurrentPasswordIcon" xmlns="http://www.w3.org/2000/svg"
                                 class="h-5 w-5 text-[#144557] dark:text-white" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            <svg id="hideCurrentPasswordIcon" xmlns="http://www.w3.org/2000/svg"
                                 class="h-5 w-5 text-[#144557] dark:text-white hidden" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                        </button>
                    </div>
                    <span asp-validation-for="CurrentPassword" class="text-red-600 dark:text-red-300 text-xs mt-1"></span>
                </div>

                <!-- New Password -->
                <div>
                    <label asp-for="NewPassword" class="block text-sm sm:text-base font-medium text-gray-700 dark:text-gray-200 mb-1 sm:mb-2 flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                        New Password
                    </label>
                    <div class="relative">
                        <input asp-for="NewPassword" type="password" id="newPassword"
                               class="w-full px-4 py-2.5 sm:py-3 bg-zinc-100/30 border border-gray-300 rounded-lg text-sm sm:text-base text-black font-normal focus:ring-2 focus:ring-[#1f7a8c] focus:border-transparent transition-colors duration-200 dark:text-white dark:bg-gray-800/10 dark:border-white/30 dark:focus:ring-[#2FA3BA]"
                               placeholder="Enter your new password">
                        <button type="button" class="absolute right-3 top-3 toggle-password cursor-pointer">
                            <svg id="showNewPasswordIcon" xmlns="http://www.w3.org/2000/svg"
                                 class="h-5 w-5 text-[#144557] dark:text-white" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            <svg id="hideNewPasswordIcon" xmlns="http://www.w3.org/2000/svg"
                                 class="h-5 w-5 text-[#144557] dark:text-white hidden" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                        </button>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-red-600 dark:text-red-300 text-xs mt-1"></span>
                </div>

                <!-- Confirm Password -->
                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm sm:text-base font-medium text-gray-700 dark:text-gray-200 mb-1 sm:mb-2 flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        Confirm New Password
                    </label>
                    <div class="relative">
                        <input asp-for="ConfirmPassword" type="password" id="confirmPassword"
                               class="w-full px-4 py-2.5 sm:py-3 bg-zinc-100/30 border border-gray-300 rounded-lg text-sm sm:text-base text-black font-normal focus:ring-2 focus:ring-[#1f7a8c] focus:border-transparent transition-colors duration-200 dark:text-white dark:bg-gray-800/10 dark:border-white/30 dark:focus:ring-[#2FA3BA]"
                               placeholder="Confirm your new password">
                        <button type="button" class="absolute right-3 top-3 toggle-password cursor-pointer">
                            <svg id="showConfirmPasswordIcon" xmlns="http://www.w3.org/2000/svg"
                                 class="h-5 w-5 text-[#144557] dark:text-white" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            <svg id="hideConfirmPasswordIcon" xmlns="http://www.w3.org/2000/svg"
                                 class="h-5 w-5 text-[#144557] dark:text-white hidden" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-red-600 dark:text-red-300 text-xs mt-1"></span>
                </div>
            </div>
        </div>

        <!-- Action buttons with fade-in animation -->
        <div class="flex flex-col sm:flex-row justify-end gap-3 sm:gap-4 transition-all duration-500 transform opacity-0 animate-fade-in" style="animation-delay: 200ms">
            <a asp-controller="Profile" asp-action="Index"
               class="px-4 sm:px-6 py-2 sm:py-3 border border-gray-300 dark:border-white/20 rounded-lg text-gray-700 dark:text-white text-sm sm:text-base font-medium hover:bg-gray-100 dark:hover:bg-gray-700/50 transition-colors flex items-center justify-center focus:outline-none focus:ring-2 focus:ring-[#1F7A8C] focus:ring-offset-2">
                <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Cancel
            </a>
            <button type="submit" id="updatePasswordButton"
                    class="px-4 sm:px-6 py-2 sm:py-3 bg-[#1f7a8c] hover:bg-[#2FA3BA] dark:bg-[#033F55] dark:hover:bg-[#255D72] text-white text-sm sm:text-base font-medium rounded-lg transition-colors flex items-center justify-center focus:outline-none focus:ring-2 focus:ring-[#1F7A8C] focus:ring-offset-2">
                <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Update Password
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_ToastError" />
    <script>
        // Password visibility toggle for all password fields
        document.querySelectorAll('.toggle-password').forEach(button => {
            button.addEventListener('click', function () {
                const input = this.parentElement.querySelector('input');
                const inputId = input.id;

                // Determine which icons to toggle based on input ID
                let showIcon, hideIcon;

                if (inputId === 'currentPassword') {
                    showIcon = document.getElementById('showCurrentPasswordIcon');
                    hideIcon = document.getElementById('hideCurrentPasswordIcon');
                } else if (inputId === 'newPassword') {
                    showIcon = document.getElementById('showNewPasswordIcon');
                    hideIcon = document.getElementById('hideNewPasswordIcon');
                } else if (inputId === 'confirmPassword') {
                    showIcon = document.getElementById('showConfirmPasswordIcon');
                    hideIcon = document.getElementById('hideConfirmPasswordIcon');
                }

                if (input.type === 'password') {
                    input.type = 'text';
                    showIcon.classList.add('hidden');
                    hideIcon.classList.remove('hidden');
                } else {
                    input.type = 'password';
                    showIcon.classList.remove('hidden');
                    hideIcon.classList.add('hidden');
                }
            });
        });
    </script>
}

<style>
    /* Animation classes - consistent with other pages */
    .animate-fade-in {
        animation: fadeIn 0.6s ease-out forwards;
    }

    .animate-fade-in-down {
        animation: fadeInDown 0.6s ease-out forwards;
    }

    .animate-fade-in-up {
        animation: fadeInUp 0.6s ease-out forwards;
    }

    /* Keyframes */
    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>