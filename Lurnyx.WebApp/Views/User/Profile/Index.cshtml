@model Lurnyx.Services.ServiceModels.UserDto
@{
    ViewData["Title"] = "User Profile";
}

@section styles {
    <link rel="stylesheet" href="~/css/output.css?v=1.0.0" />
}

<!-- Background Wave for Dark Mode -->
<div>
    <img src="~/img/BackgroundWave2.svg"
         class="fixed inset-0 w-screen h-screen object-cover opacity-0 dark:opacity-100 transition-opacity duration-300 -z-10 pointer-events-none"
         alt="background wave">
</div>

<!-- Main container with fade-in animation -->
<div class="container mx-auto px-4 sm:px-6 dark:bg-transparent">
    <!-- Main Content -->
    <main class="p-4 sm:p-6 space-y-6">
        <!-- Enhanced Page Header with fade-in-down animation -->
        <div class="pb-4 border-b border-gray-300 dark:border-white/20 flex flex-col sm:flex-row justify-between items-start sm:items-end gap-4 transition-all duration-500 transform opacity-0 animate-fade-in-down">
            <div>
                <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">User Profile</h1>
                <p class="mt-1 text-sm sm:text-base text-gray-700 dark:text-gray-200">View and manage your profile information</p>
            </div>
            <div class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
                <span>Last updated: @Model.UpdatedAt.ToString("MMMM dd, yyyy")</span>
            </div>
        </div>

        <!-- Grid Layout with Improved Spacing -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Profile Information Card with fade-in-up animation -->
            <div class="bg-white p-6 rounded-xl shadow-sm lg:col-span-2 border border-[#f3f4f6] dark:bg-teal-900/20 dark:border-white/20 backdrop-blur-sm transition-all duration-200 hover:shadow-md hover:border-[#1F7A8C]/30 opacity-0 animate-fade-in-up" style="animation-delay: 100ms">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        Profile Information
                    </h2>

                    <div class="flex flex-row items-center space-x-2">
                        <a asp-controller="Profile" asp-action="ChangePassword"
                           class="flex items-center bg-[#1F7A8C] text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-[#166575] cursor-pointer transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-[#1F7A8C] focus:ring-offset-2 dark:focus:ring-offset-gray-800">
                            <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                            Change Password
                        </a>
                        <a asp-controller="Profile" asp-action="Edit"
                           class="flex items-center bg-[#1F7A8C] text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-[#166575] cursor-pointer transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-[#1F7A8C] focus:ring-offset-2 dark:focus:ring-offset-gray-800">
                            <img src="~/img/edit-button.svg" class="w-4 h-4 mr-2" alt="Edit icon" />
                            Edit
                        </a>
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
                    <!-- Enhanced Field Display -->
                    <div class="space-y-1">
                        <label class="text-sm font-medium text-gray-700 dark:text-gray-200 flex items-center gap-1">
                            First Name
                        </label>
                        <div class="w-full mt-1 p-3 border border-gray-200 rounded-md bg-gray-50 text-base text-black dark:text-white dark:bg-gray-800/10 dark:border-white/30 transition-colors duration-200 flex items-center gap-2">
                            <span>@Model.FirstName</span>
                        </div>
                    </div>
                    <div class="space-y-1">
                        <label class="text-sm font-medium text-gray-700 dark:text-gray-200 flex items-center gap-1">
                            Last Name
                        </label>
                        <div class="w-full mt-1 p-3 border border-gray-200 rounded-md bg-gray-50 text-base text-black dark:text-white dark:bg-gray-800/10 dark:border-white/30 transition-colors duration-200 flex items-center gap-2">
                            <span>@Model.LastName</span>
                        </div>
                    </div>
                    <div class="space-y-1">
                        <label class="text-sm font-medium text-gray-700 dark:text-gray-200 flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                            Email Address
                        </label>
                        <div class="w-full mt-1 p-3 border border-gray-200 rounded-md bg-gray-50 text-base text-black dark:text-white dark:bg-gray-800/10 dark:border-white/30 transition-colors duration-200 flex items-center gap-2">
                            <span>@Model.Email</span>
                        </div>
                    </div>
                    <div class="space-y-1">
                        <label class="text-sm font-medium text-gray-700 dark:text-gray-200 flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                            </svg>
                            Role
                        </label>
                        <div class="w-full mt-1 p-3 border border-gray-200 rounded-md bg-gray-50 text-base text-black dark:text-white dark:bg-gray-800/10 dark:border-white/30 transition-colors duration-200 flex items-center gap-2">
                            <span>@Model.Role.ToString().Replace('_', ' ').ToLower()</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profile Picture Card with fade-in-up animation -->
            <div class="bg-white p-6 rounded-xl shadow-sm flex flex-col items-center border border-[#f3f4f6] dark:bg-teal-900/20 dark:border-white/20 backdrop-blur-sm transition-all duration-200 hover:shadow-md hover:border-[#1F7A8C]/30 opacity-0 animate-fade-in-up" style="animation-delay: 200ms">
                <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    Profile Picture
                </h2>
                <div class="w-32 h-32 rounded-full bg-gray-200 flex items-center justify-center mb-4 overflow-hidden ring-2 ring-gray-300 dark:ring-gray-500 relative group transform hover:scale-105 transition-transform duration-300">
                    @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                    {
                        <div class="w-full h-full">
                            <img src="@Model.ProfileImageUrl" class="w-full h-full object-cover" alt="Profile picture" />
                        </div>
                    }
                    else
                    {
                        <span class="text-sm text-gray-500 dark:text-gray-400">No Image</span>
                    }
                </div>
                <a asp-controller="Profile" asp-action="ChangePhoto"
                   class="flex items-center bg-[#1F7A8C] text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-[#166575] mb-2 cursor-pointer transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-[#1F7A8C] focus:ring-offset-2 dark:focus:ring-offset-gray-800">
                    <img src="~/img/change-photo-button.svg" class="w-4 h-4 mr-2" alt="Change photo icon" />
                    @(string.IsNullOrEmpty(Model.ProfileImageUrl) ? "Add Photo" : "Change Photo")
                </a>
                <p class="text-xs text-gray-500 dark:text-gray-200 text-center">JPG, PNG or GIF. Max size 2MB.</p>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <partial name="_ToastError" />
}

<style>
    /* Animation classes - consistent with other pages */
    .animate-fade-in {
        animation: fadeIn 0.6s ease-out forwards;
    }

    .animate-fade-in-down {
        animation: fadeInDown 0.6s ease-out forwards;
    }

    .animate-fade-in-up {
        animation: fadeInUp 0.6s ease-out forwards;
    }

    /* Keyframes */
    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>